    }
    tr.enter        { opacity: 0; transform: translateX(-20px); }
    tr.enter-active { transition: all 0.5s ease; opacity: 1; transform: translateX(0); }
    tr.exit         { animation: fadeOut 0.5s forwards; }
    @keyframes fadeOut {
      to { opacity: 0; transform: translateX(20px); }
